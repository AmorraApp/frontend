{
  "name": "@amorra/frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Static site frontend for amorra.us",
  "scripts": {
    "start": "rimraf dist && NODE_OPTIONS=--max_old_space_size=4096 webpack-dev-server  --config=./webpack/index.js",
    "build": "rimraf dist && NODE_ENV=production webpack --config=./webpack/index.js",
    "build-dev": "rimraf dist && USE_REACT_REFRESH=false webpack --config=./webpack/index.js",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint-fix": "esling --fix ."
  },
  "license": "Private",
  "engines": {
    "node": ">=16.13.0"
  },
  "imports": {
    "#src/*": [
      "./src/*"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/material": "^5.10.7",
    "@mui/system": "^5.10.7",
    "@twipped/hooks": "^0.5.0",
    "@twipped/utils": "^6.1.1",
    "bootstrap": "^5.1.3",
    "core-js": "^3.25.3",
    "date-fns": "^2.29.3",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "qs": "^6.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@svgr/webpack": "^6.3.1",
    "@twipped/eslint-config": "^7.5.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "babel-loader": "^8.2.5",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.3",
    "env-schema": "^5.1.0",
    "eslint": "^8.24.0",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "react-dev-utils": "^12.0.1",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^3.0.2",
    "source-map-loader": "^4.0.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-strip-block": "^0.3.0"
  },
  "files": [
    "dist"
  ],
  "cssnano": {
    "preset": [
      "default",
      {
        "discardComments": {
          "removeAll": true
        }
      }
    ]
  }
}
